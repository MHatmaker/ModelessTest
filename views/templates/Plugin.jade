
div(class="modeless", id="idPlugin", role="dialog",
    aria-labelledby="pluginLabel", aria-hidden="true",
    class=col-sm-12 col-sx-10)
    div(class="modal-content")
        div(class="modal-header")
            span
                div(id="pluginLabel", class="modal-title col-sm-12", style="font-size: 1.5rem")
                    {{data.title}}
                    button(type="button", class="close col-sm-1 col-xs-6",
                        data-dismiss="modal", aria-hidden="true", ng-click="cancel()") &times

        div(class="modal-body")
            div(id="accountInfo", role="tablist", aria-multiselectable="true")
                div(id="repeater", ng-repeat="m in data.nfos", class="ng-scope")
                    div(class="card")
                        div(class="card-header", role="tab", id="debtorHeader{{m.filenumber}}")
                            button(class="btn", data-toggle="collapse",
                                ng-click="onShowHideClicked(m.filenumber)",
                                data-target="#debtorInfo{{m.filenumber}}", aria-expanded="false",
                                aria-controls="debtorInfo{{m.filenumber}}")
                                span
                                | Debtor Info {{m.filenumber}}
                                img(class='accdionchevron-right',
                                    ng-class="{'accdionchevron-right': data.itmCollapsed[{{m.filenumber}}], \
                                    'accdionchevron-down': !data.itmCollapsed[{{m.filenumber}}]}")

                        div(id="debtorInfo{{m.filenumber}}", class="card-collapse collapse", role="tabpanel",
                            uib-collapse="data.itmCollapsed[{{m.filenumber}}]",
                            aria-labelledby="debtorHeader{{m.filenumber}}")
                            div(class="card card-block")
                                div(class="row")
                                    div(class="col-sm-2 col-xs-5 text-right") <strong>File Number</strong>
                                    div(class="col-sm-3 col-xs-4") {{m.filenumber}}
                                    div(class="col-sm-2 col-xs-5 text-right")<strong>DOB</strong>
                                    div(class="col-sm-3 col-xs-4") {{m.DOB}}

                                div(class="row")
                                    div(class="col-sm-2 col-xs-5")
                                    div(class="col-sm-3 col-xs-4")
                                    div(class="col-sm-2 col-xs-5 text-right")<strong>SSAN</strong>
                                    div(class="col-sm-3 col-xs-4") {{m.SSAN}}

                                div(class="row")
                                    div(class="col-sm-2 col-xs-5 text-right")<strong>Name</strong>
                                    div(class="col-sm-3 col-xs-4") {{m.fullname}}
                                    div(class="col-sm-2 col-xs-5 text-right")<strong>Employer</strong>
                                    div(class="col-sm-3 col-xs-4") {{m.employer}}

                                div(class="row")
                                    div(class="col-sm-2 col-xs-5 text-right")<strong>Address</strong>
                                    div(class="col-sm-3 col-xs-4") {{m.address}}
                                    div(class="col-sm-2 col-xs-5 text-right")<strong>Skipped Employer</strong>
                                    div(class="col-sm-3 col-xs-4") {{m.custom}}
