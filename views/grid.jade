extends index

block content
    div(class="SummaryVisible", ng-controller="SummaryCtrl")
        div(ng-controller="TopRowCtrl", ng-click="onExpandClicked()")
            span(style='cursor: pointer; cursor: hand;')
                figure(style="margin-top: 4px; margin-bottom: 4px; margin-left: 4px;")
                    img(src="../images/Expand.png", id='ExpandSumImgId', class="expandoimage", style="margin: 0.01em 0.5em  0.01em  0.05em;")
                    figcaption(class="btn", style="float: left;  text-align: left;padding: 0.01em 0.01em 0.01em 0.2em;font-weight: 800;") Expand/Shrink Summary Master Website Options

        div(style="display:{{$parent.row2Showing}}", ng-controller="Row2Ctrl")
            div(class="row")
                div(class="col-xs-12 col-sm-8 col-md-8 col-lg-8") .col-xs-12 .col-sm-8 .col-md-8 .col-lg-8
                div(class="col-xs-6 col-sm-4 col-md-4 col-lg-4") .col-xs-6 .col-sm-4 .col-md-4 .col-lg-4

            div(class="row")
                div(class="col-xs-6 col-sm-4") .col-xs-6 .col-sm-4
                div(class="col-xs-6 col-sm-4") .col-xs-6 .col-sm-4
                div(class="col-xs-6 col-sm-4") .col-xs-6 .col-sm-4

    div
        div(class="row", ng-controller="SiteBodyCtrl", id="idSiteBodyCtrl")

            div(class="col-xs-12 col-sm-6 col-md-4", ng-controller="LeftColCtrl", style="display:{{$parent.leftColShowing}}")
                include stuffing.jade
                include stuffing.jade

            div(ng-controller="MapColCtrl", class="{{mapColDef}}")
                div(class="row")
                    div(class="col-xs-6")
                        figure(style="margin-top: 4px; margin-bottom: 4px; margin-left: 4px;", ng-click="onExpandClicked()")
                            img(src="../images/Expand.png", id='ExpandSumImgId', class="expandoimage", style="margin: 0.01em 0.5em  0.01em  0.05em;")
                            figcaption(class="btn", style="float: left;  text-align: left;padding: 0.01em 0.01em 0.01em 0.2em;font-weight: 800;") Expand/Shrink Map
                    div(class="col-xs-6")
                        button(type"button", class="btn btn-primary", ng-click="onShowMDialogClicked()", style="margin-top: 0.01em;") Toggle Dialog
                        button(type"button", class="btn btn-primary", ng-click="onShowPluginClicked()", style="margin-top: 0.01em;") Toggle Plugin

                div(class="row")
                    div(ng-controller="MapViewCtrl", id="MapViewCtrlId")
                        div(class="card", style="overflow-x: auto; overflow-y: auto;")
                            img(class="card-img-top", src="../images/ChiMap.png")


            div(class="col-xs-12 col-sm-6 col-md-4", ng-controller="RightColCtrl", style="display:{{$parent.rightColShowing}}")
                include busnonsense.jade
                include busnonsense.jade
