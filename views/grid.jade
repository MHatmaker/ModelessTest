extends index

block content
    div(class="SummaryVisible", ng-controller="SummaryCtrl", class="col-xs-12")
        div(ng-controller="TopRowCtrl", style='cursor: pointer; cursor: hand;')
            button(type"button", class="btn btn-labeled btn-primary",
                ng-click="onExpandClicked()")
                span(class="btn-label")
                    | {{$parent.data.heading}}
                    i(class="fa fa-expand fa-lg", ng-class="{'fa-expand': !$parent.data.expanded, \
                    'fa-compress': $parent.data.expanded}", style="padding-left: 0.5rem")

        div(style="display:{{$parent.row2Showing}}", ng-controller="Row2Ctrl")
            div(class="row")
                div(class="col-xs-12 col-sm-8 col-md-8 col-lg-8") .col-xs-12 .col-sm-8 .col-md-8 .col-lg-8
                div(class="col-xs-6 col-sm-4 col-md-4 col-lg-4") .col-xs-6 .col-sm-4 .col-md-4 .col-lg-4

            div(class="row")
                div(class="col-xs-6 col-sm-4") .col-xs-6 .col-sm-4
                div(class="col-xs-6 col-sm-4") .col-xs-6 .col-sm-4
                div(class="col-xs-6 col-sm-4") .col-xs-6 .col-sm-4

    div
        div(class="row", ng-controller="SiteBodyCtrl", id="idSiteBodyCtrl")

            div(class="col-xs-12 col-sm-6 col-md-4", ng-controller="LeftColCtrl", style="display:{{$parent.leftColShowing}}")
                include stuffing.jade
                include stuffing.jade

            div(ng-controller="MapColCtrl", class="{{mapColDef}}", class="col-xs-12")
                div(class="row")
                    div
                        button(type="button", class="btn btn-labeled btn-primary",
                            ng-click="onExpandClicked()")
                            span(class="btn-label")
                                | {{$parent.data.shrinkgrowtext}}
                                i(class="fa fa-expand fa-lg", ng-class="{'fa-expand': !$parent.data.expanded, \
                                'fa-compress': $parent.data.expanded}", style="padding-left: 0.5rem")

                        button(type"button", class="btn btn-labeled btn-primary",
                            ng-click="onMapLinkrClicked()")
                            span(class="btn-label")
                                | {{mldata.mapLinkrBtnText}}
                                i(class="fa fa-expand fa-lg", ng-class="{'fa-expand': !mldata.isOpen, \
                                'fa-compress': mldata.isOpen}", style="padding-left: 0.5rem")

                div(class="row")
                    div(ng-controller="MapViewCtrl", id="MapViewCtrlId", class="col-sx-12")
                        div(class="card", style="overflow-x: auto; overflow-y: auto;")
                            img(class="card-img-top", src="../images/ChiMap.png")


            div(class="col-xs-12 col-sm-6 col-md-4", ng-controller="RightColCtrl", style="display:{{$parent.rightColShowing}}")
                include busnonsense.jade
                include busnonsense.jade
